.container-fluid.bg-grey
  .container
    .row
      .col.text-center.py-3
        = link_to 'Click here to create a new debt', users_path, class: 'btn btn-secondary'
.container-fluid.bg-white
  .container
    .row
      .col
        %h4.c-red.font-weight-bold.text-center.my-3.border-bottom Active debts
        - if @dashboard.user_active_debts.blank?
          %h5.text-center.font-italic
            no debts
        - else
          - @dashboard.user_active_debts.each_value do |debt|
            = render 'debts/debt', object: debt, user: :creditor, type: :debt
      .col
        %h4.c-green.font-weight-bold.text-center.my-3.border-bottom
          Active credits
        - if @dashboard.user_active_credits.blank?
          %h5.text-center.font-italic
            no credits
        - else
          - @dashboard.user_active_credits.each_value do |credit|
            = render 'debts/debt', object: credit, user: :debtor, type: :credit
