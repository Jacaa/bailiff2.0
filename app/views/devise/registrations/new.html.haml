.container-fluid.full-height.bg-grey.py-1
  .form-wrapper.mx-auto.my-5.p-4.text-center
    %h2 Create new account using
    .oauth-wrapper.mt-3.mb-2
      = link_to user_facebook_omniauth_authorize_path, class: 'facebook mx-4 p-4 c-white fb-color' do
        %i.ion-social-facebook
    .inside-lines
      %h4 or
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render 'shared/error_messages', object: resource
      .field.form-group
        = f.text_field :first_name, autofocus: true, placeholder: 'First name', class: 'grey-input'
      .field.form-group
        = f.text_field :last_name, autofocus: true, placeholder: 'Last name', class: 'grey-input'
      .field.form-group
        = f.email_field :email, autocomplete: 'email', placeholder: 'Email', class: 'grey-input'
      .field.form-group
        = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'grey-input'
      .field.form-group
        = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password confirmation', class: 'grey-input'
      .actions.form-group
        = f.submit 'Sign up', class: 'btn btn-success'
    = render 'devise/shared/links'

